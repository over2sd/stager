USE stager;
CREATE TABLE IF NOT EXISTS member ( mid INT(8) UNSIGNED PRIMARY KEY AUTO_INCREMENT, famname VARCHAR(30) NOT NULL, givname VARCHAR(25) NOT NULL, hphone CHAR(10), mphone CHAR(10), email VARCHAR(254), address VARCHAR(255), city VARCHAR(100), state CHAR(3), zip VARCHAR(10), notes TEXT, dob DATE, memtype CHAR(2), imgfn CHAR(64), gender CHAR(1) );
CREATE TABLE IF NOT EXISTS cv (rid INT(12) UNSIGNED PRIMARY KEY AUTO_INCREMENT, mid INT(8) UNSIGNED, work INT(12) UNSIGNED NOT NULL, role VARCHAR(30) NOT NULL, year INT(4) UNSIGNED, month INT(2) UNSIGNED, troupe INT(8) UNSIGNED, rtype INT(4) UNSIGNED);
CREATE TABLE IF NOT EXISTS troupe (tid INT(8) UNSIGNED PRIMARY KEY AUTO_INCREMENT, tname VARCHAR(30) UNIQUE NOT NULL, notes TEXT);
CREATE TABLE IF NOT EXISTS work (wid INT(12) UNSIGNED PRIMARY KEY AUTO_INCREMENT, sname VARCHAR(100) UNIQUE NOT NULL);
CREATE TABLE IF NOT EXISTS guardian ( mid INT(8) UNSIGNED PRIMARY KEY NOT NULL, name VARCHAR(50) NOT NULL, phone CHAR(10), rel CHAR(10) );
